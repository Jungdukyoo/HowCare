<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="8dp">

  <ImageView
    android:id="@+id/contentnum_dot_icon"
    android:layout_width="13dp"
    android:layout_height="13dp"
    android:layout_marginTop="6dp"
    android:layout_marginStart="51dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/contentnum_title"
    app:srcCompat="@mipmap/o_c1"/>
  <TextView
    android:id="@+id/contentnum_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginStart="9dp"
    android:fontFamily="@font/batang_pro_l"
    android:includeFontPadding="false"
    android:text="하임리히법"
    android:textColor="@color/greyish_brown"
    android:textSize="17sp"
    app:layout_constraintStart_toEndOf="@+id/contentnum_dot_icon"
    app:layout_constraintTop_toTopOf="parent"/>
  <ImageView
    android:id="@+id/contentnnum_video"
    android:layout_width="140dp"
    android:layout_height="40dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/contentnum_title"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@mipmap/video_icon"/>
</androidx.constraintlayout.widget.ConstraintLayout>