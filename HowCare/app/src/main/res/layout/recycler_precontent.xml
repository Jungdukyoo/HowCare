<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/precontent_cl"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="8dp">

  <TextView
    android:id="@+id/precontent_empty"
    android:layout_width="0dp"
    android:layout_height="18dp"
    android:text=""
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/precontent_text"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:fontFamily="@font/batang_pro_m"
    android:includeFontPadding="false"
    android:letterSpacing="-0.01"
    android:text="식사는 침대보다 식당에서 함께 하는 것이 좋습니다.  "
    android:textColor="#4b4b4b"
    android:textSize="17sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/precontent_empty"/>
</androidx.constraintlayout.widget.ConstraintLayout>