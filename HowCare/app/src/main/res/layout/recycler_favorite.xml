<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/favorite_cl"
  android:layout_width="match_parent"
  android:layout_height="109dp"
  android:background="@color/white"
  android:hapticFeedbackEnabled="false">

  <ImageView
    android:id="@+id/favorite_thumbimg"
    android:layout_width="wrap_content"
    android:layout_height="78dp"
    android:layout_marginStart="16dp"
    android:adjustViewBounds="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/mini01_1"/>
  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="27dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintBottom_toTopOf="@+id/imageView7"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/favorite_thumbimg"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
      android:id="@+id/favorite_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="9dp"
      android:fontFamily="@font/batang_pro_b"
      android:includeFontPadding="false"
      android:text="식사의 중요성"
      android:textColor="#4c4c4c"
      android:textSize="17sp"
      app:layout_constraintBottom_toBottomOf="@+id/favorite_pagenum"
      app:layout_constraintStart_toEndOf="@+id/favorite_pagenum"
      app:layout_constraintTop_toTopOf="@+id/favorite_pagenum"/>
    <TextView
      android:id="@+id/favorite_pagenum"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="4dp"
      android:fontFamily="@font/batang_pro_b"
      android:includeFontPadding="false"
      android:text="01"
      android:textColor="@color/light_mustard"
      android:textSize="17sp"
      app:layout_constraintBottom_toTopOf="@+id/favorite_text"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>
    <TextView
      android:id="@+id/favorite_text"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:fontFamily="@font/notosanscjkkr_m"
      android:includeFontPadding="false"
      android:singleLine="true"
      android:text="입으로 먹는 것이 중요하다"
      android:textColor="#828181"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>
  </androidx.constraintlayout.widget.ConstraintLayout>
  <ImageView
    android:id="@+id/favorite_heart"
    android:layout_width="21dp"
    android:layout_height="18dp"
    android:layout_marginEnd="21dp"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@mipmap/favorite_heart_fill"/>
  <ImageView
    android:id="@+id/imageView7"
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:src="@mipmap/favorite_line"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>