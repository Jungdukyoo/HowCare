<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/presubtext_img"
    android:layout_width="5dp"
    android:layout_height="5dp"
    android:layout_marginTop="13dp"
    android:layout_marginStart="43.3dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintEnd_toStartOf="@+id/presubtext_text"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/presubcircle_c3"/>
  <TextView
    android:id="@+id/presubtext_text"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="58dp"
    android:fontFamily="@font/batang_pro_l"
    android:text="TextView"
    android:textColor="#000000"
    android:textSize="17sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/presubtext_img"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="식당으로 이동하는 과정에서 자연스럽게 활동량이 증가합니다."/>
</androidx.constraintlayout.widget.ConstraintLayout>