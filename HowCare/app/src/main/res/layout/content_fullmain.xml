<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:showIn="@layout/app_bar_main2">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="13dp"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:paddingBottom="154dp"
    android:orientation="vertical">
    <ImageView
      android:id="@+id/imageView10"
      android:layout_width="match_parent"
      android:layout_height="16dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="10dp"
      app:srcCompat="@mipmap/main_beforetext"/>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">
      <ImageView
        android:id="@+id/mainThumb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="2dp"

        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/mainthumb1"/>
      <ImageView
        android:id="@+id/mainThumb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/mainthumb2"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">
      <ImageView
        android:id="@+id/mainThumb3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="2dp"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/mainthumb3"/>
      <ImageView
        android:id="@+id/mainThumb4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/mainthumb4"/>
    </LinearLayout>

    <ImageView
      android:id="@+id/imageView11"
      android:layout_width="match_parent"
      android:layout_height="18dp"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="12dp"
      app:srcCompat="@mipmap/main_aftertext"/>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">
      <ImageView
        android:id="@+id/mainThumb5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="2dp"

        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/mainthumb5"/>
      <ImageView
        android:id="@+id/mainThumb6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/mainthumb6"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">
      <ImageView
        android:id="@+id/mainThumb7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="2dp"

        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/mainthumb7"/>
      <ImageView
        android:id="@+id/mainThumb8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/mainthumb8"/>
    </LinearLayout>
  </LinearLayout>
</ScrollView>